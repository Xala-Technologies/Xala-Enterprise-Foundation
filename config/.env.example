# Foundation Package Environment Variables

# Package Configuration
FOUNDATION_ENVIRONMENT=development
FOUNDATION_LOG_LEVEL=info
FOUNDATION_DEBUG_MODE=false

# Norwegian Compliance
NSM_CLASSIFICATION_LEVEL=BEGRENSET
GDPR_COMPLIANCE_ENABLED=true
DIGDIR_COMPLIANCE_ENABLED=true

# Security Settings
ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
ACCESS_CONTROL_ENABLED=true

# Performance Settings
PERFORMANCE_MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_ENABLED=true

# Feature Toggles
MODULE_REGISTRY_ENABLED=true
CONFIG_RELOADING_ENABLED=true
HOT_RELOADING_ENABLED=false

# Localization
DEFAULT_LOCALE=nb-NO
SUPPORTED_LOCALES=nb-NO,nn-NO,en-US
TIMEZONE=Europe/Oslo
CURRENCY=NOK
