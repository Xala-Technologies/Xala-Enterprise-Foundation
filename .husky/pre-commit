#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🇳🇴 Running Norwegian compliance checks..."

# Run lint-staged
pnpm lint-staged --config .lintstagedrc.cjs

# Type check
echo "📝 Type checking..."
pnpm typecheck

# Norwegian compliance validation
echo "🔒 Norwegian compliance check..."
pnpm compliance:quick

echo "✅ All checks passed!"
