{
  // Norwegian-Compliant TypeScript Language Model (TSLM) Settings
  // Based on Section 8: Tooling & Automation

  // Code Quality & ESLint Integration
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  // TypeScript Configuration
  "typescript.preferences.strict": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",

  // Norwegian Compliance Features
  "accessibility.announceColors": false,
  "accessibility.enableExtraHighContrast": false,
  "workbench.colorTheme": "Vira Carbon High Contrast",

  // Language Support (Norwegian Bokm√•l/Nynorsk)
  "i18n.enableAutoCompletion": true,
  "i18n.enableKeyGeneration": true,
  "spellright.language": ["nb", "nn", "en"],
  "spellright.documentTypes": ["typescript", "typescriptreact", "javascript", "markdown"],

  // Security & Compliance Indicators
  "workbench.colorCustomizations": {
    "statusBar.background": "#1e3a8a", // Norwegian blue for government compliance
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingBackground": "#dc2626",
    "statusBar.noFolderBackground": "#6b7280"
  },

  // File Associations for Norwegian Compliance
  "files.associations": {
    "*.nsm.ts": "typescript",
    "*.gdpr.ts": "typescript",
    "*.digdir.ts": "typescript",
    "*.compliance.ts": "typescript",
    "*.norwegian.ts": "typescript"
  },

  // Code Lens for Norwegian Standards
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,

  // Git Integration for Audit Trails
  "git.enableCommitSigning": true,
  "git.alwaysSignOff": true,
  "git.confirmSync": true,

  // Search Configuration for Compliance
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true
  },

  // Prettier Configuration (Norwegian Standards)
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 100,

  // IntelliSense for Norwegian APIs
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.jsdoc.generateReturns": true,

  // Security Scanning
  "securityscan.enableRealTimeScanning": true,
  "securityscan.excludePatterns": ["test/**", "**/*.test.ts"],

  // Norwegian Government Extensions (when available)
  "extensions.ignoreRecommendations": false,
  "extensions.showRecommendationsOnlyOnDemand": false,

  // Performance & Memory for Large Norwegian Codebases
  "typescript.preferences.maxFileSize": 20971520,
  "typescript.tsc.autoDetect": "on",
  "typescript.npm": "auto",

  // Debugging Configuration
  "debug.console.fontSize": 14,
  "debug.console.lineHeight": 20,
  "debug.allowBreakpointsEverywhere": false,

  // Terminal Configuration for Norwegian Development
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,

  // File Explorer Customization
  "explorer.compactFolders": false,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,

  // Emmet for Norwegian HTML/Components
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },

  // Problems Panel for Compliance Issues
  "problems.showCurrentInStatus": true,
  "problems.sortOrder": "severity",

  // Norwegian Classification Indicators
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,

  // Auto-save for Government Audit Requirements
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,

  // Custom Norwegian Compliance Snippets
  "editor.snippetSuggestions": "top",
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Workspace Trust for Security
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.startupPrompt": "always",

  // Comments for Audit Trail
  "editor.comments.insertSpace": true,
  "editor.comments.ignoreEmptyLines": false,

  // ESLint enhanced configuration
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // Enhanced Prettier configuration
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Additional Norwegian-specific settings
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Enhanced accessibility helpers
  "accessibility.dimUnfocused.enabled": true,
  "accessibility.verbosity": "high",

  // Additional Norwegian file associations
  "files.associations": {
    "*.nsm.ts": "typescript",
    "*.gdpr.ts": "typescript",
    "*.digdir.ts": "typescript",
    "*.compliance.ts": "typescript",
    "*.norwegian.ts": "typescript",
    "*.norwegian.json": "json",
    "*.nsm": "yaml"
  }
}
