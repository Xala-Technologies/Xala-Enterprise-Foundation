{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": "..",
    "paths": {
      "@/foundation": ["./src"],
      "@/foundation/*": ["./src/*"],
      "@/platforms/*": ["./platforms/*"],
      "@/examples": ["./examples"],
      "@/examples/*": ["./examples/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules", "../dist", "../tests"]
}
